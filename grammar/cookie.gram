

<identifier_statement> ::= <identifier> :type := <expression>;
    | <identifier> := <expression>; 


<identifier> := <letter>{0-9}*{_}*  

<AugOperator> := 
                | "+="
                | "-="
                | "*="
                | "/="
                | "%="
                | "**="

<char>  := ' <symbol> '
        | '<letter>'
        | '<number>'
<letter> := {a-zA-Z}+
<number> := {0-9}+  
<symbol> := {"#%'*+,./:;=?@^_`|~-{}[]()><?}+


